        block reveal-init 
            script. 
                Reveal.initialize({
                    controls: true,
                    progress: true,
                    center: true,
                    hash: true,

                    plugins: [ RevealZoom, RevealNotes, RevealSearch, RevealMarkdown, RevealHighlight ]
                });